{
  "name": "html-linter",
  "version": "1.0.0",
  "description": "A linter to check formatting of html files",
  "bin": {
    "html-linter": "bin/html-linter.js"
  },
  "scripts": {
    "start": "npm run compile && npm run lint",
    "compile": "tsc",
    "lint": "node bin/html-linter --config html-linter.json"
  },
  "keywords": [
    "html-linter",
    "template-linter"
  ],
  "author": "Heather Roberts",
  "license": "ISC",
  "dependencies": {
    "colors": "^1.1.2",
    "commander": "^2.12.2",
    "glob": "^7.1.2"
  },
  "devDependencies": {
    "@types/node": "^8.0.58",
    "ts-node": "^4.0.1",
    "typescript": "^2.6.2"
  }
}
